@using TimeGo.Models
@model AdminSetting
@{
    ViewBag.Title = "Manage Email Text";
}
<script src="//cdn.ckeditor.com/4.6.2/standard/ckeditor.js"></script>
<style>
    .date {width: 70px;}

    .single-line input, .single-line button {
        display: inline-block
    }

    .single-line button { width: auto;}
</style>

<h1>@Model.CompanyName</h1>

<h3>EMAIL - @Model.Caption</h3>
<br /><br />


@using (Html.BeginForm(Model.Key, Model.CompanyURL, FormMethod.Post, new { @class = "form-horizontal", role = "form" })) {
    @Html.HiddenFor(m => m.Key)
    @Html.HiddenFor(m => m.Caption)

    <div class="container">
        <div class="form-group">
            @Html.TextAreaFor(m => m.Value, new { Style = "width:100%; max-width: 100%", @cols=200, @rows=20, @Class = "ckeditor form-control md-col-12" })
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Save" />    <input type="button" value="Cancel" class="btn btn-default" onclick="location.href='@Url.Action("Index", "Admin")'" />
        </div>
    </div>
}



        @section scripts{
            <script>
                $(function () {
                    $(".date").datepicker({
                        showOtherMonths: true,
                        selectOtherMonths: true
                    });

                    CKEDITOR.replace('.ckeditor', {
                        uiColor: '#CCEAEE'
                    });

                });
            </script>


            @Scripts.Render("~/bundles/jqueryval")
        }

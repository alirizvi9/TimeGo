<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - TimeGo</title>

    <!-- 1. Load libraries -->
    <!-- Polyfill(s) for older browsers -->
    <script src="~/dist/libs/core-js/client/shim.min.js"></script>
    <script src="~/dist/libs/zone.js/dist/zone.js"></script>
    <script src="~/dist/libs/reflect-metadata/Reflect.js"></script>
    <script src="~/dist/libs/systemjs/dist/system.src.js"></script>

    <!-- 2. Configure SystemJS -->
    <script src="~/Content/scripts/systemjs.config.js"></script>
    @RenderSection("head", required: false)
</head>
<body>
    @RenderBody()

    @RenderSection("scripts", required: false)
</body>
</html>

@{
    ViewBag.Title = "TimeGo";
    Layout = "~/Views/Shared/_NgLayout.cshtml";
}
@section head{
    <base href="/">
    <link href="~/dist/css/style.css" rel="stylesheet">
    <script>
        System.config({
            paths: {
                'libs:': '/dist/libs/'
            },
            packages: {
                'lodash': {
                    main: 'libs:lodash/lodash.js',
                    defaultExtension: 'js'
                },
                'chart.js': {
                    main: 'libs:chart.js/dist/chart.js',
                    defaultExtension: 'js'
                },
                'angular2-text-mask': {
                    main: 'libs:angular2-text-mask/dist/angular2TextMask.js',
                    defaultExtension: 'js'
                },
                'ngx-bootstrap': {
                    format: 'cjs',
                    main: 'libs:ngx-bootstrap/bundles/ngx-bootstrap.umd.js',
                    defaultExtension: 'js'
                }
            },
            map: {
                'lodash': 'libs:lodash',
                'chart.js': 'libs:chart.js',
                'angular2-text-mask': 'libs:angular2-text-mask',
                'ng2-charts': 'libs:ng2-charts/bundles/ng2-charts.umd.js',
                'ng2-select': 'libs:ng2-select/bundles/ng2-select.umd.js',
                'ng2-dragula': 'libs:ng2-dragula/bundles/ng2-dragula.umd.js',
                'angular2-toaster': 'libs:angular2-toaster/bundles/angular2-toaster.umd.js',
                
            },

        });
        System.import('/dist/js/main.js').catch(function (err)
        {
            console.error(err);
        });
    </script>
}

<app-root></app-root>
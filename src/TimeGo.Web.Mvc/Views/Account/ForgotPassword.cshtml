@model TimeGo.Web.Mvc.Models.ForgotPasswordViewModel
@using TimeGo;
@{
    ViewBag.Title = Resource.ForgotPass;
    Layout = "~/Views/Shared/_SignUpLayout.cshtml";
}

@using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { role = "form" }))
{
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card-group mb-0">
                <div class="card p-6">
                    <div class="card-block">
                        <h1>@Resource.RestorePassword</h1>
                        <p>@Resource.EnterYourEmailRestore</p>
                        <div class="input-group mb-3">
                            <span class="input-group-addon">
                                <i class="">@@</i>
                            </span>
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = Resource.Email })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "tooltiptext tooltiptext-right" })
                        </div>
                        <div class="row">
                            <div class="col-6">
                                <input type="submit" value="@Resource.Restore" class="btn btn-primary px-4" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

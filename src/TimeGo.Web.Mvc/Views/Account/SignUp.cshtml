@using TimeGo;
@model TimeGo.Web.Mvc.Models.SignUpViewModel
@{
    ViewBag.Title = Resource.SignUp;
    Layout = "~/Views/Shared/_SignUpLayout.cshtml";
}

@using (Html.BeginForm("SignUp", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card card-block">
                <div class="card-header">
                    <h1>@Resource.SignUp</h1>
                    <p class="text-muted">@Resource.CreateYourAccount</p>
                </div>
                <div class="card-group mb-0">
                    <div class="card-block p-4 border-right">
                        <div class="input-group mb-3 required">
                            <span class="input-group-addon">
                                <i class="icon-organization"></i>
                            </span>
                            @Html.TextBoxFor(m => m.CompanyName, new { @class = "form-control", @placeholder = Resource.CompanyName })
                            @Html.ValidationMessageFor(m => m.CompanyName, "", new { @class = "tooltiptext tooltiptext-left" })
                        </div>
                        <div class="input-group mb-3 required">
                            <span class="input-group-addon">
                                <i class="icon-user"></i>
                            </span>
                            @Html.TextBoxFor(m => m.FullName, new { @class = "form-control", @placeholder = Resource.FullName })
                            @Html.ValidationMessageFor(m => m.FullName, "", new { @class = "tooltiptext tooltiptext-left" })
                        </div>
                        <div class="input-group mb-3 required">
                            <span class="input-group-addon">@@</span>
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = Resource.Email })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "tooltiptext tooltiptext-left" })
                        </div>
                        <div class="input-group mb-3 required">
                            <span class="input-group-addon">
                                <i class="icon-lock"></i>
                            </span>
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = Resource.Password })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "tooltiptext tooltiptext-left" })
                        </div>
                        <div class="input-group mb-3 required">
                            <span class="input-group-addon">
                                <i class="icon-lock"></i>
                            </span>
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = Resource.ConfirmPassword })
                            @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "tooltiptext tooltiptext-left" })
                        </div>
                    </div>
                    <div class="card-block p-4">
                        <div class="input-group mb-3 required">
                            <span class="input-group-addon">
                                <i class="icon-phone"></i>
                            </span>
                            @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control", @placeholder = Resource.PhoneNumber })
                            @Html.ValidationMessageFor(m => m.PhoneNumber, "", new { @class = "tooltiptext tooltiptext-right" })
                        </div>
                        <div class="input-group mb-3">
                            <span class="input-group-addon required">
                                <i class="icon-clock"></i>
                            </span>
                            @Html.DropDownListFor(m => m.TimezoneId, (SelectList)ViewBag.Timezones, @Resource.Timezone, new { @class = "form-control", @placeholder = Resource.Timezone })
                            @Html.ValidationMessageFor(m => m.TimezoneId, "", new { @class = "tooltiptext tooltiptext-right" })
                        </div>
                        <div class="input-group mb-3">
                            <span class="input-group-addon required">
                                <i class="icon-calendar"></i>
                            </span>
                            @Html.DropDownListFor(m => m.Weekdays, (SelectList)ViewBag.Weekdays, Resource.WeekStart, new { @class = "form-control", @placeholder = Resource.WeekStart })
                            @Html.ValidationMessageFor(m => m.Weekdays, "", new { @class = "tooltiptext tooltiptext-right" })
                        </div>
                        <div class="input-group mb-3 required">
                            @Html.TextBoxFor(m => m.CompanyUrl, new { @class = "form-control", @placeholder = Resource.CompanyURL })
                            <span class="input-group-addon">
                                <i class="">.timego.com/</i>
                            </span>
                            @Html.ValidationMessageFor(m => m.CompanyUrl, "", new { @class = "tooltiptext tooltiptext-right" })
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-success pull-right">@Resource.CreateAccount</button>
                </div>
            </div>
        </div>
    </div>
}
@using TimeGo;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title - TimeGo.com</title>
    @Styles.Render("~/bundles/staticCss")

    @RenderSection("head", required: false)
</head>
<body class="app header-fixed aside-menu-fixed aside-menu-hidden">
    <header class="app-header navbar">
        <button class="navbar-toggler mobile-sidebar-toggler d-lg-none" type="button">☰</button>
        <a class="navbar-brand" href="">TimeGo Admin</a>
        <ul class="nav navbar-nav d-md-down-none">
            <li class="nav-item">
                <a class="nav-link navbar-toggler sidebar-toggler" href="#">☰</a>
            </li>
        </ul>
        <ul class="nav navbar-nav ml-auto">
            <li class="nav-item dropdown d-md-down-none">
                <a class="nav-link dropdown-toggle nav-link" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                    <span class="d-md-down-none">admin</span>
                </a>
                <div class="dropdown-menu dropdown-menu-right">
                    <a class="dropdown-item" href="@Url.Action("Logout","AdminLogin")"><i class="fa fa-lock"></i> Logout</a>
                </div>
            </li>
            <li class="nav-item dropdown d-md-down-none"></li>
        </ul>
    </header>
    <div class="app-body">
        <div class="sidebar">
            <nav class="sidebar-nav">
                <ul class="nav">
                    <li class="nav-title">
                        @Resource.Admin
                    </li>
                    <li class="nav-item nav-dropdown">
                        <a class="nav-link nav-dropdown-toggle"><i class=""></i> Companies</a>
                        <ul class="nav-dropdown-items">
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Index","Company")"><i class=""></i> @Resource.ManageCompanies</a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </nav>
        </div>
        <main class="main">
            <div class="container-fluid">
                @RenderBody()
            </div>
        </main>
    </div>

    <script src="~/Content/scripts/jquery.min.js"></script>
    <script src="~/Content/scripts/bootstrap.min.js"></script>
    <script src="~/Content/scripts/tether.min.js"></script>
    <script src="~/Content/scripts/app.js"></script>
    @RenderSection("scripts", required: false)
    <footer class="app-footer">
        © TimeGo 2017
    </footer>
</body>

</html>